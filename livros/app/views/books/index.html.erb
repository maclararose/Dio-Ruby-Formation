<p style="color: green"><%= notice %></p>

<h1>Livros</h1>


<div id="books">
  <table>
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Descrição</th>
        <th></th> <!-- Coluna vazia para o link "Ver mais" -->
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.rating %></td>
          <td><%= book.description %></td>
          <td><%= link_to "Ver mais", book %></td>
        </tr>
      <% end %>
  </table>
</div>

<%= link_to "Novo livro", new_book_path %>
